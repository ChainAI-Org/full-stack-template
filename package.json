{
  "type": "module",
  "scripts": {
    "lint": "oxlint",
    "dev": "tsx -r tsconfig-paths/register scripts/db-setup.ts && tsx -r tsconfig-paths/register src/server.ts --dev",
    "db:setup": "tsx -r tsconfig-paths/register scripts/db-setup.ts",
    "start": "NODE_ENV=production node -r tsconfig-paths/register dist/server.js",
    "build": "npm run db:setup && npm run build:client && npm run build:server",
    "build:server": "tsc",
    "build:client": "NODE_ENV=production vite build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "db:migrate:make": "tsx -r tsconfig-paths/register --tsconfig tsconfig.json ./node_modules/.bin/knex migrate:make -x ts --knexfile knexfile.ts",
    "db:migrate:latest": "tsx -r tsconfig-paths/register --tsconfig tsconfig.json ./node_modules/.bin/knex migrate:latest --knexfile knexfile.ts",
    "db:migrate:rollback": "tsx -r tsconfig-paths/register --tsconfig tsconfig.json ./node_modules/.bin/knex migrate:rollback --knexfile knexfile.ts",
    "db:seed:make": "tsx -r tsconfig-paths/register --tsconfig tsconfig.json ./node_modules/.bin/knex seed:make -x ts --knexfile knexfile.ts",
    "db:seed:run": "tsx -r tsconfig-paths/register --tsconfig tsconfig.json ./node_modules/.bin/knex seed:run --knexfile knexfile.ts"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/react": "^1.1.0",
    "@fastify/vite": "^8.1.2",
    "@unhead/react": "^2.0.8",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "history": "^5.3.0",
    "knex": "^3.1.0",
    "minipass": "^7.1.2",
    "mysql": "^2.18.1",
    "pg": "^8.16.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.5.0",
    "sqlite3": "^5.1.7",
    "valtio": "^2.1.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.1",
    "@types/node": "^22.13.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "oxlint": "^0.16.6",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^4.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.2.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
